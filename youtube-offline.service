[Unit]
Description=YouTube Offline - Automatic Playlist Downloader
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/files/apps/youtube-offline
ExecStart=/usr/bin/node %h/files/apps/youtube-offline/dist/server.js
Restart=always
RestartSec=10

# Logging - use journald (view with: journalctl --user -u youtube-offline -f)
StandardOutput=journal
StandardError=journal

# Environment
Environment="NODE_ENV=production"

[Install]
WantedBy=default.target
